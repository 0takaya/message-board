<%= form_with(model: message) do |f| %>
  <% if message.errors.any? %>
    <dif id="error_explanation">
      <ul>
        <% message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </dif>
  <% end %>
  
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>
  
  <%= f.label :content, 'メッセージ' %>
  <%= f.text_field :content %>
  
  <%= f.submit '投稿'%>
<% end %>